<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:client.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="client.Views.Login"
             x:DataType="vm:LoginViewModel">
    
    <Design.DataContext>
        <vm:LoginViewModel/>
    </Design.DataContext>
    
    <StackPanel VerticalAlignment="Center"
                Margin="300 0"
                Spacing="10">
        <TextBlock HorizontalAlignment="Center"
                   FontSize="40">Chores</TextBlock>
        <TextBox Watermark="username"
                 Text="{Binding Username}"></TextBox>
        <TextBox PasswordChar="•"
                 Watermark="password"
                 Text="{Binding Password}"></TextBox>
        <TextBox PasswordChar="•" 
                 Watermark="confirm password" 
                 IsVisible="False"
                 Text="{Binding ConfirmedPassword}"></TextBox> <!--enable when registering-->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="10">
            <Button>Login</Button>
            <Button>Register</Button>
        </StackPanel>
    </StackPanel>
</UserControl>
