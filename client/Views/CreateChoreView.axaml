<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:client.Views"
             xmlns:vm="using:client.ViewModels"
             mc:Ignorable="d" d:DesignWidth="820" d:DesignHeight="580"
             x:Class="client.Views.CreateChoreView"
             x:DataType="vm:CreateChoreViewModel"
             >
    <Border Background="White" Margin="20" Width="800">
        <ScrollViewer>
            <DockPanel>
                <views:ChoreSettingsView DockPanel.Dock="Top" 
                    DataContext="{Binding SettingsViewModel}">
                </views:ChoreSettingsView>
                <Button VerticalAlignment="Bottom" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                        Margin="10"
                        IsEnabled="{Binding
                            Path=!SettingsViewModel.HasErrors}">
                    Create
                </Button>
            </DockPanel>
        </ScrollViewer>
    </Border>
</UserControl>
