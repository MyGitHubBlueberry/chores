<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:client.Views"
             xmlns:vm="using:client.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="client.Views.CreateChoreView"
             x:DataType="vm:CreateChoreViewModel">
    <Border Background="White" Margin="20" Width="800" MinWidth="450"
            MinHeight="400">
    <ScrollViewer>
        <DockPanel>
            <views:ChoreSettingsView DockPanel.Dock="Top"></views:ChoreSettingsView>
            <Button VerticalAlignment="Bottom" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Margin="10">Create</Button>
        </DockPanel>
        </ScrollViewer>
    </Border>
</UserControl>
