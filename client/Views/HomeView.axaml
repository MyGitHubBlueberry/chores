<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:client.Views"
             xmlns:vm="using:client.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="700"
             x:Class="client.Views.HomeView"
             x:DataType="vm:HomeViewModel">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300"/> 
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="*" MinWidth="300"/>
        </Grid.ColumnDefinitions>
        <!-- <views:MyChoresView Grid.Row="0" Grid.Column="0"></views:MyChoresView> -->
        <ContentControl Content="{Binding MyChoresVM}" />
        <GridSplitter Grid.Column="1" Background="DimGray"></GridSplitter>
        <views:TodoView Grid.Column="2"></views:TodoView>
    </Grid>
</UserControl>
