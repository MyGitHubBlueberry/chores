<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:client.Views"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
             x:Class="client.Views.TodoView">
    <StackPanel Width="400"
                Height="450">
        <DockPanel Margin="10">
            <TextBlock>Todo:</TextBlock>
            <ComboBox SelectedIndex="0" HorizontalAlignment="Right">
                <ComboBoxItem>Day</ComboBoxItem>
                <ComboBoxItem>Week</ComboBoxItem>
                <ComboBoxItem>Month</ComboBoxItem>
            </ComboBox>
        </DockPanel>
        <ScrollViewer>
            <StackPanel>
                <views:TodoChoreView></views:TodoChoreView>
                <views:TodoChoreView></views:TodoChoreView>
                <views:TodoChoreView></views:TodoChoreView>
                <views:TodoChoreView></views:TodoChoreView>
                <views:TodoChoreView></views:TodoChoreView>
                <views:TodoChoreView></views:TodoChoreView>
                <views:TodoChoreView></views:TodoChoreView>
                <views:TodoChoreView></views:TodoChoreView>
                <views:TodoChoreView></views:TodoChoreView>
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</UserControl>
